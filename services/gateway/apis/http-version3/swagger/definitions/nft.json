{
    "NFTAttributes": {
        "type": "object",
        "required": [
            "module",
            "attributes"
        ],
        "properties": {
            "module": {
                "type": "string",
                "example": "customModule"
            },
            "attribute": {
                "type": "string",
                "example": "Custom attribute"
            }
        }
    },
    "NFT": {
        "type": "object",
        "required": [
            "id",
            "nft",
            "owner",
            "attributes",
            "lockingModule"
        ],
        "properties": {
            "id": {
                "type": "string",
                "description": "Universal identifier of the NFT.",
                "example": "00000000100000001"
            },
            "nft": {
                "type": "object",
                "required": [
                    "chainID",
                    "collectionID",
                    "index"
                ],
                "properties": {
                    "chainID": {
                        "type": "string",
                        "description": "Chain ID on which the NFT was created.",
                        "example": "00000000"
                    },
                    "collectionID": {
                        "type": "string",
                        "description": "Collection ID of the NFT.",
                        "example": "10000000"
                    },
                    "index": {
                        "type": "number",
                        "description": "Index of NFT within the collection.",
                        "example": 1
                    }
                }
            },
            "owner": {
                "type": "string",
                "description": "Owner of the NFT. It will be an address when owned by an account on the chain it was created or a chainID when escrowed.",
                "example": "lskyvvam5rxyvbvofxbdfcupxetzmqxu22phm4yuo"
            },
            "attributes": {
                "description": "List of NFT attributes.",
                "type": "array",
                "items": {
                    "$ref": "#/definitions/NFTAttributes"
                }
            },
            "lockingModule": {
                "type": "string",
                "description": "Module name that locked the NFT.",
                "example": "customModule"
            },
            "escrowedChainID": {
                "type": "string",
                "description": "Chain ID to which the NFT is escrowed.",
                "example": "04000002"
            }
        }
    },
    "NFTsWithEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "List of NFTs.",
                "type": "array",
                "items": {
                    "$ref": "#/definitions/NFT"
                }
            },
            "meta": {
                "$ref": "#/definitions/pagination"
            }
        }
    },
    "nftConstantsWithEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "NFT module constants.",
                "type": "object",
                "required": [
                    "feeCreateNFT"
                ],
                "properties": {
                    "feeCreateNFT": {
                        "type": "string",
                        "example": "5000000",
                        "description": "The extra fee to be supplied for creating NFT."
                    }
                }
            },
            "meta": {
                "type": "object"
            }
        }
    },
    "nftSupportedWithEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "NFT module supported collection IDs information.",
                "type": "object",
                "required": [
                    "isSupportAllNFTs",
                    "exactCollectionIDs"
                ],
                "properties": {
                    "isSupportAllNFTs": {
                        "type": "boolean",
                        "example": "false",
                        "description": "A boolean indicating if all NFTs are supported by the application."
                    },
                    "patternCollectionIDs": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "description": "List of patterns representing chains whose all collection IDs are supported by the application."
                        },
                        "example": "[00000000********, 00000001********]"
                    },
                    "exactCollectionIDs": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "description": "List of NFT collection IDs supported by the application."
                        },
                        "example": "[0000000210000000, 0000000220000000]"
                    }
                }
            },
            "meta": {
                "type": "object"
            }
        }
    }
}
