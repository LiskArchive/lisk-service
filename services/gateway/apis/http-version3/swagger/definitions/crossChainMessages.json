{
    "crossChainMessage": {
        "type": "object",
        "required": [
            "moduleCrossChainCommandID",
            "moduleCrossChainCommandName",
            "sendingChainID",
            "receivingChainID",
            "nonce",
            "fee",
            "status",
            "params",
            "ccms"
        ],
        "properties": {
            "moduleCrossChainCommandID": {
                "type": "string",
                "example": "64:3",
                "description": "Combination of cross-chain transaction module:command ID.\n"
            },
            "moduleCrossChainCommandName": {
                "type": "string",
                "example": "interoperability:mainchainCCUpdate",
                "description": "Combination of cross-chain module:command Name.\n"
            },
            "sendingChainID": {
                "type": "integer",
                "format": "id",
                "minLength": 1,
                "example": 1,
                "description": "sendingChainID of blockchain application"
            },
            "receivingChainID": {
                "type": "integer",
                "format": "id",
                "minLength": 1,
                "example": 100,
                "description": "receivingChainID of blockchain application"
            },
            "nonce": {
                "type": "string",
                "example": "0"
            },
            "fee": {
                "type": "string",
                "example": "1000000",
                "description": "Transaction fee associated with this transaction.\n"
            },
            "status": {
                "type": "string",
                "example": "active",
                "description": "Current state of the CCM"
            },
            "block": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "id",
                        "minLength": 1,
                        "maxLength": 64,
                        "example": "01967dba384998026fe028119bd099ecf073c05c045381500a93d1a7c7307e5b",
                        "description": "Unique identifier of the block.\nDerived from the block signature.\n"
                    },
                    "height": {
                        "type": "integer",
                        "minimum": 1,
                        "example": 8350681,
                        "description": "The height of the network, at the moment where this transaction was included in the blockchain.\n"
                    },
                    "timestamp": {
                        "type": "integer",
                        "example": 1613323667,
                        "description": "UNIX Timestamp"
                    },
                    "transactionID": {
                        "type": "string",
                        "format": "id",
                        "minLength": 1,
                        "maxLength": 64,
                        "example": "ed0ea31f11c43cddebb8aa805458cc5bc68425e853a113b86ca188b963ee0186",
                        "description": "Unique identifier of the transaction."
                    }
                }
            },
            "params": {
                "type": "object",
                "properties": {
                    "amount": {
                        "type": "string",
                        "example": "100003490",
                        "description": "Amount of Lisk to be transferred in this transaction.\n"
                    },
                    "recipient": {
                        "type": "object",
                        "properties":{
                            "address": {
                                "type": "string",
                                "format": "address",
                                "example": "lskdwsyfmcko6mcd357446yatromr9vzgu7eb8y99",
                                "description": "The Lisk Address is the human readable representation of the accounts owners' public key.\nIt is 41 character long address thats begins with `lsk`.\n"
                            },
                            "name": {
                                "type": "string",
                                "example": "genesis_84",
                                "description": "Delegate name"
                            },
                            "publicKey": {
                                "type": "string",
                                "format": "publicKey",
                                "example": "b1d6bc6c7edd0673f5fed0681b73de6eb70539c21278b300f07ade277e1962cd",
                                "description": "The public key is derived from the private key of the owner of the account.\nIt can be used to validate that the private key belongs to the owner, but not provide access to the owners private key.\n"
                            }
                        }
                    },
                    "data": {
                        "type": "string",
                        "example": "test"
                    }
                }
            },
            "ccms": {
                "type": "array",
                "items": {
                    "type": "string",
                    "example": "689b9a40aa11cbc8327d5eeebed9a1052940730f9c34cffb33ae591131141349"
                }
            }
        }
    },
    "crossChainMessagesWithEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta",
            "links"
        ],
        "properties": {
            "data": {
                "description": "List of CCMs",
                "type": "array",
                "items": {
                    "$ref": "#/definitions/crossChainMessage"
                }
            },
            "meta": {
                "$ref": "#/definitions/Pagination"
            },
            "links": {
                "type": "object"
            }
        }
    }
}
