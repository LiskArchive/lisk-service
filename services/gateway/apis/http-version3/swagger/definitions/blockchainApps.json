{
    "BlockchainApp": {
        "type": "object",
        "required": [
            "name",
            "chainID",
            "state",
            "address",
            "isDefault"
        ],
        "properties": {
            "name": {
                "type": "string",
                "example": "Lisk",
                "description": "Name of the blockchain application"
            },
            "chainID": {
                "type": "integer",
                "format": "id",
                "minLength": 1,
                "example": 1,
                "description": "Chain ID of the blockchain application"
            },
            "state": {
                "type": "string",
                "example": "active",
                "description": "Current state of the application"
            },
            "address": {
                "type": "string",
                "format": "address",
                "example": "lskdwsyfmcko6mcd357446yatromr9vzgu7eb8y99",
                "description": "The Lisk Address is the human-readable representation of a blockchain account.\nIt is 41 character long identifier that begins with `lsk`.\n"
            },
            "isDefault": {
                "type": "boolean",
                "example": "true"
            },
            "lastCertificateHeight": {
                "type": "integer",
                "example": 160,
                "minimum": 1,
                "description": "Last certificate height"
            },
            "lastUpdated": {
                "type": "string",
                "example": "1616008148",
                "description": "timestamp"
            }
        }
    },
    "BlockchainAppsWithEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "List of blockchain applications",
                "type": "array",
                "items": {
                    "$ref": "#/definitions/BlockchainApp"
                }
            },
            "meta": {
                "$ref": "#/definitions/Pagination"
            }
        }
    },
    "blockchainAppsStatsEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "Blockchain applications statistics",
                "type": "object",
                "properties": {
                    "registered": {
                        "type": "integer",
                        "example": 2503,
                        "description": "List of registered blockchain applications"
                    },
                    "active": {
                        "type": "integer",
                        "example": 2328,
                        "description": "List of active blockchain applications"
                    },
                    "terminated": {
                        "type": "integer",
                        "example": 35,
                        "description": "List of terminated blockchain applications"
                    },
                    "totalSupplyLSK": {
                        "type": "string",
                        "example": "5000000"
                    },
                    "stakedLSK": {
                        "type": "string",
                        "example": "3000000"
                    },
                    "inflationRate": {
                        "type": "string",
                        "example": "4.50"
                    }
                }
            },
            "meta": {
                "type": "object"
            }
        }
    },
    "BlockchainAppMetaList": {
        "type": "object",
        "required": [
            "chainName",
            "chainID",
            "networkType"
        ],
        "properties": {
            "chainName": {
                "type": "string",
                "example": "Lisk",
                "description": "Name of the blockchain application"
            },
            "chainID": {
                "type": "string",
                "example": "00000001",
                "description": "Chain ID of the blockchain application"
            },
            "networkType": {
                "type": "string",
                "example": "mainnet"
            }
        }
    },
    "BlockchainAppsMetaListWithEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "List of blockchain applications for which off-chain data is available",
                "type": "array",
                "items": {
                    "$ref": "#/definitions/BlockchainAppMetaList"
                }
            },
            "meta": {
                "$ref": "#/definitions/Pagination"
            }
        }
    },
    "BlockchainAppMetadata": {
        "type": "object",
        "required": [
            "chainName",
            "chainID",
            "genesisURL",
            "networkType",
            "projectPage",
            "logo",
            "backgroundColor",
            "serviceURLs",
            "explorers"
        ],
        "properties": {
            "chainName": {
                "type": "string",
                "example": "Lisk",
                "description": "Chain name of the blockchain application"
            },
            "chainID": {
                "type": "string",
                "example": "00000001",
                "description": "Chain ID of the blockchain application"
            },
            "title": {
                "type": "string",
                "example": "Lisk blockchain application"
            },
            "description": {
                "type": "string",
                "example": "Lisk is a blockchain application platform"
            },
            "networkType": {
                "type": "string",
                "example": "mainnet"
            },
            "isDefault": {
                "type": "boolean",
                "example": "true"
            },
            "genesisURL": {
                "type": "string",
                "example": "https://downloads.lisk.com/lisk/mainnet/genesis_block.json.tar.gz"
            },
            "projectPage": {
                "type": "string",
                "example": "https://lisk.com"
            },
            "serviceURLs": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "http": {
                            "type": "string",
                            "example": "https://service.lisk.com"
                        },
                        "ws": {
                            "type": "string",
                            "example": "wss://service.lisk.com"
                        }
                    }
                }
            },
            "logo": {
                "type": "object",
                "properties": {
                    "png": {
                        "type": "string",
                        "example": "https://downloads.lisk.com/lisk/images/logo.png"
                    },
                    "svg": {
                        "type": "string",
                        "example": "https://downloads.lisk.com/lisk/images/logo.svg"
                    }
                }
            },
            "appPage": {
                "type": "string",
                "example": "https://lisk.com"
            },
            "backgroundColor": {
                "type": "string",
                "example": "#0981D1"
            },
            "explorers": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "example": "https://lisk.observer"
                        },
                        "txnPage": {
                            "type": "string",
                            "example": "/transactions"
                        }
                    }
                }
            },
            "appNodes": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "example": "https://mainnet.lisk.com"
                        },
                        "maintainer": {
                            "type": "string",
                            "example": "Lightcurve GmbH"
                        }
                    }
                }
            }
        }
    },
    "BlockchainAppsMetadataWithEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "List of blockchain applications with off-chain metadata",
                "type": "array",
                "items": {
                    "$ref": "#/definitions/BlockchainAppMetadata"
                }
            },
            "meta": {
                "$ref": "#/definitions/Pagination"
            }
        }
    },
    "BlockchainAppTokenMetadata": {
        "type": "object",
        "required": [
            "chainID",
            "chainName",
            "tokenID",
            "tokenName",
            "logo"
        ],
        "properties": {
            "chainID": {
                "type": "string",
                "example": "00000001",
                "description": "Chain ID of the blockchain application"
            },
            "chainName": {
                "type": "string",
                "example": "Lisk",
                "description": "Name of the blockchain application"
            },
            "tokenID": {
                "type": "string",
                "example": "Lisk",
                "description": "Token name of the blockchain application"
            },
            "tokenName": {
                "type": "string",
                "example": "00000000",
                "description": "Token ID of the blockchain application"
            },
            "networkType": {
                "type": "string",
                "example": "mainnet"
            },
            "description": {
                "type": "string",
                "example": "LSK is the utility token of Lisk"
            },
            "denomUnits": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "denom": {
                            "type": "string",
                            "example": "lsk"
                        },
                        "decimal": {
                            "type": "integer",
                            "example": 8
                        }
                    }
                }
            },
            "symbol": {
                "type": "string",
                "example": "LSK"
            },
            "displayDenom": {
                "type": "string",
                "example": "LSK"
            },
            "baseDenom": {
                "type": "string",
                "example": "beddows"
            },
            "logo": {
                "type": "object",
                "properties": {
                    "png": {
                        "type": "string",
                        "example": "https://downloads.lisk.com/lisk/images/logo.png"
                    },
                    "svg": {
                        "type": "string",
                        "example": "https://downloads.lisk.com/lisk/images/logo.svg"
                    }
                }
            }
        }
    },
    "BlockchainAppsTokenMetadataWithEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "List of blockchain applications off-chain metadata for tokens",
                "type": "array",
                "items": {
                    "$ref": "#/definitions/BlockchainAppTokenMetadata"
                }
            },
            "meta": {
                "$ref": "#/definitions/Pagination"
            }
        }
    }
}
