{
    "nftID": {
        "name": "nftID",
        "in": "query",
        "description": "ID of the NFT.",
        "type": "string",
        "format": "id",
        "minLength": 32,
        "maxLength": 32,
        "pattern": "^[a-fA-F0-9]{32}$"
    },
    "nftCollectionID": {
        "name": "collectionID",
        "in": "query",
        "description": "Collection ID of the NFT.",
        "type": "string",
        "format": "id",
        "minLength": 8,
        "maxLength": 8,
        "pattern": "^[a-fA-F0-9]{8}$"
    },
    "nftOwner": {
        "name": "owner",
        "in": "query",
        "description": "Owner of the NFT.",
        "type": "string",
        "minLength": 8,
        "maxLength": 41,
        "pattern": "^(lsk[a-hjkm-z2-9]{38})$|^(?:[a-fA-F0-9]{8})$"
    },
    "nftIndex": {
        "name": "Index",
        "in": "query",
        "description": "Index of the NFT.",
        "type": "integer",
        "format": "int32",
        "minimum": 1
    },
    "nftChainID": {
        "name": "Chain ID",
        "in": "query",
        "description": "Chain ID of the NFT.",
        "type": "string",
        "format": "id",
        "minLength": 8,
        "maxLength": 8,
        "pattern": "^[a-fA-F0-9]{8}$"
    },
    "nftEscrowChainID": {
        "name": "Escrow chain ID",
        "in": "query",
        "description": "chain ID of the chain to which NFT is escrowed.",
        "type": "string",
        "format": "id",
        "minLength": 8,
        "maxLength": 8,
        "pattern": "^[a-fA-F0-9]{8}$"
    }
}
