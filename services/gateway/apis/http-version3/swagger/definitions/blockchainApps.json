{
    "BlockchainApp": {
        "type": "object",
        "required": [
            "name",
            "chainID",
            "state",
            "address",
            "isDefault"
        ],
        "properties": {
            "name": {
                "type": "string",
                "example": "Lisk",
                "description": "Name of the blockchain application"
            },
            "chainID": {
                "type": "integer",
                "format": "id",
                "minLength": 1,
                "example": 1,
                "description": "Chain ID of the blockchain application"
            },
            "state": {
                "type": "string",
                "example": "active",
                "description": "Current state of the application"
            },
            "address": {
                "type": "string",
                "format": "address",
                "example": "lskdwsyfmcko6mcd357446yatromr9vzgu7eb8y99",
                "description": "The Lisk Address is the human-readable representation of a blockchain account.\nIt is 41 character long identifier that begins with `lsk`.\n"
            },
            "isDefault": {
                "type": "boolean",
                "example": "true"
            },
            "lastCertificateHeight": {
                "type": "integer",
                "example": 160,
                "minimum": 1,
                "description": "Last certificate height"
            },
            "lastUpdated": {
                "type": "string",
                "example": "1616008148",
                "description": "timestamp"
            }
        }
    },
    "BlockchainAppsWithEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "List of blockchain applications",
                "type": "array",
                "items": {
                    "$ref": "#/definitions/BlockchainApp"
                }
            },
            "meta": {
                "$ref": "#/definitions/Pagination"
            }
        }
    },
    "blockchainAppsStatsEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "Blockchain applications statistics",
                "type": "object",
                "properties": {
                    "registered": {
                        "type": "integer",
                        "example": 2503,
                        "description": "List of registered blockchain applications"
                    },
                    "active": {
                        "type": "integer",
                        "example": 2328,
                        "description": "List of active blockchain applications"
                    },
                    "terminated": {
                        "type": "integer",
                        "example": 35,
                        "description": "List of terminated blockchain applications"
                    },
                    "totalSupplyLSK": {
                        "type": "string",
                        "example": "5000000"
                    },
                    "stakedLSK": {
                        "type": "string",
                        "example": "3000000"
                    },
                    "inflationRate": {
                        "type": "string",
                        "example": "4.50"
                    }
                }
            },
            "meta": {
                "type": "object"
            }
        }
    },
    "BlockchainAppMetaList": {
        "type": "object",
        "required": [
            "name",
            "chainID",
            "networks"
        ],
        "properties": {
            "name": {
                "type": "string",
                "example": "Lisk",
                "description": "Name of the blockchain application"
            },
            "networks": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "chainID": {
                            "type": "integer",
                            "format": "id",
                            "minLength": 1,
                            "example": 1,
                            "description": "Chain ID of the blockchain application"
                        },
                        "network": {
                            "type": "string",
                            "example": "mainnet"
                        }
                    }
                }
            }
        }
    },
    "BlockchainAppsMetaListWithEnvelope": {
        "type": "object",
        "required": [
            "data",
            "meta"
        ],
        "properties": {
            "data": {
                "description": "List of blockchain applications for which off-chain data is available",
                "type": "array",
                "items": {
                    "$ref": "#/definitions/BlockchainAppMetaList"
                }
            },
            "meta": {
                "$ref": "#/definitions/Pagination"
            }
        }
    }
}