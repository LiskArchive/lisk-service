{
    "Pagination": {
        "type": "object",
        "required": [
            "count",
            "offset"
        ],
        "properties": {
            "count": {
                "type": "integer",
                "example": 10,
                "minimum": 0,
                "description": "Number of items returned in the request."
            },
            "offset": {
                "type": "integer",
                "example": 10,
                "minimum": 0,
                "description": "Defines how many items are skipped."
            },
            "total": {
                "type": "integer",
                "example": 400,
                "minimum": 0,
                "description": "Total number of items in the database."
            }
        }
    }
}