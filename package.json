{
  "name": "lisk-service",
  "version": "0.1.0",
  "description": "Lisk Service",
  "keywords": [
    "lisk",
    "service",
    "blockchain"
  ],
  "homepage": "https://github.com/LiskHQ/lisk-service",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiskHQ/lisk-service.git"
  },
  "bugs": {
    "url": "https://github.com/LiskHQ/lisk-service/issues"
  },
  "private": true,
  "author": "Lisk Foundation <admin@lisk.io>, lightcurve GmbH <admin@lightcurve.io>",
  "license": "Apache-2.0",
  "main": "app.js",
  "engines": {
    "node": "12.16.2",
    "npm": "6.14.4"
  },
  "scripts": {
    "eslint": "eslint \"./framework/**/*.js\" \"./services/**/*.js\"",
    "docker:build": "npm run docker:build:core && npm run docker:build:gateway",
    "docker:build:core": "cd ./services/core && docker build --tag=lisk/service_core ./",
    "docker:build:gateway": "cd ./services/gateway && docker build --tag=lisk/service_gateway ./"
  },
  "devDependencies": {
    "eslint": "^7.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-lisk-base": "^1.2.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mocha": "^7.0.1"
  }
}
